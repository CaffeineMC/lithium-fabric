{
    "schemaVersion": 1,
    "id": "lithium",
    "version": "${version}",
    "name": "Lithium",
    "description": "Lithium is a free and open-source optimization mod for Minecraft which makes a wide range of performance improvements to the game.",
    "authors": [
        "JellySquid"
    ],
    "contact": {
        "homepage": "https://jellysquid.me",
        "sources": "https://github.com/jellysquid3/lithium"
    },
    "license": "LGPL-3.0-only",
    "icon": "assets/lithium/icon.png",
    "environment": "*",
    "entrypoints": {
        "main": [
            "me.jellysquid.mods.lithium.common.LithiumMod"
        ]
    },
    "mixins": [
        "lithium.mixins.json"
    ],
    "accessWidener": "lithium.accesswidener",
    "depends": {
        "fabricloader": ">=0.10.5",
        "minecraft": ">=1.17-alpha"
    },
    "breaks": {
        "optifabric": "*"
    }
}
